@* LoadingIndicator.razor *@
@if (IsLoading)
{
    <div class="text-center my-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Analyzing trends, please wait...</p>
        <button class="btn btn-danger mt-3" @onclick="CancelAnalysis">Cancel</button>
    </div>

}

@code {
    [Parameter]
    public bool IsLoading { get; set; } // Determines whether to show the loading indicator

    [Parameter]
    public string? Message { get; set; } // Optional loading message

    [Parameter]
    public Action CancelAnalysis { get; set; } // Cancellation token source for canceling the operation
}
